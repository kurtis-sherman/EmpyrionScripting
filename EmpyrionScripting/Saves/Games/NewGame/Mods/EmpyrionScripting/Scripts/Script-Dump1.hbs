{{! Name this LCD "Script:Dump1@5" }}
{{! Name the projector "Script:Dump1@5" }}
{{~set 'CN1' '001[c][cc9966]DUMP1'}}
{{~set 'CNA' '001[c][cc9966]DUMP*'}}
{{~set 'Vol' 0}}
{{#items E.S 'CargoIn'}}
{{#test Id in '4316,4292,4347'}}{{! Change these numbers to move new items into the container }}
{{move this @root.E.S @root.Data.CNA}}
{{/move}}
{{/test}}
{{#test Id in  @Ids.Ore}}
{{move this @root.E.S @root.Data.CNA}}
{{/move}}
{{/test}}
{{/items}}
{{~#items E.S @root.Data.CN1}}{{! aThis is the display output portion for CN1 }}
{{~#math @root.Data.Vol '+' (calc (configattr Id 'Volume') '*' Count)}}
{{~set 'Vol' .}}
{{~/math}}
{{~/items}}
{{fontsize 5}}
<color=yellow>
Container: {{@root.Data.CN1}}
<color=white>
Total Volume: {{@root.Data.Vol}}
{{#items E.S @root.Data.CN1}}
- [{{format Id '{0,4}'}}]:{{format Count '{0,5}'}} {{i18n Id}}
{{/items}}
